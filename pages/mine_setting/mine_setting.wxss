/* pages/mine_setting/mine_setting.wxss */
.base {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
  padding: 28rpx;
  position: relative;
}

.base .profily_header {
  position: relative;
  height: 120rpx;
  width: 120rpx;
  background-size: 100%;
}

.base .profily_header::after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #f6f6f6 !important;
  opacity: 0;
}

.base .profily_header:active::after {
  opacity: 0.3;
}

.base text {
  margin-left: 20px;
  font-size: 30rpx;
}

.base .edit {
  position: absolute;
  height: 46rpx;
  width: 82rpx;
  line-height: 46rpx;
  border: 1px solid #f2844c;
  border-radius: 12rpx;
  text-align: center;
  font-size: 30rpx;
  right: 30rpx;
  top: 40rpx;
  color: #f2844c;
}

.base .edit:active {
  background-color: rgba(242, 132, 76,0.1)
}

.center {
  background-color: #eeeeee;
  padding-bottom: 1rpx;
}

.li {
  line-height: 110rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  margin-bottom: 25rpx;
  padding-left: 25rpx;
  padding-right: 20rpx;
}
.li:active {
  opacity: 0.8;
}

.li:nth-child(-n+1) {
  border-top: 1px solid #cccccc;
}

image {
  width: 40rpx;
  height: 40rpx;
}