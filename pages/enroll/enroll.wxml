<!--pages/enroll/enroll.wxml-->
<view class="page">
  <view class="first userName">
    <input placeholder="用户名" placeholder-class="plas" class="inputs" type="text" bindinput="usernameInput"/>
  </view>
  <view class="second userPhone">
    <input placeholder="手机号码" placeholder-class="plas" class="inputs" type="number" bindinput="userphoneInput"/>
  </view>
  <view class="second password">
    <input placeholder="密码" placeholder-class="plas" class="inputs" type="password" bindinput="passwordInput"/>
  </view>
  <view class="second confirm">
    <input placeholder="确定密码" placeholder-class="plas" class="inputs" type="password" bindinput="passwordInputACK"/>
  </view>
  <view class="click" bindtap="regist" style="background-color:{{bgcolor}}; opacity: {{opacity}};">注册</view>
  <view class="cha" bindtap="signin">
    <text class="no">已有账号，点我登录</text>
  </view>
</view>