/* pages/login/login.wxss */
.page {
  left: 0rpx;
  right: 0rpx;
}

.first {
  width: 90%;
  height: 100rpx;
  margin: 80rpx 5% auto;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #ccffcc;
}

.plas {
  font-size: 30rpx;
  color: #ccc;
}

.inputs {
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
  margin: auto;
  margin-left: 20rpx;
  width: 100%;
}

.second {
  width: 90%;
  height: 100rpx;
  margin: 40rpx 5% auto;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #ccffcc;
}

.click {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 60rpx 5% auto;
  border-radius: 8rpx;
  background-color: green;
  text-align: center;
  color: white;
  font-size: 33rpx;
}
.click:active {
  opacity: 0.6!important;
}
.cha {
  width: 90%;
  height: 50rpx;
  margin: 30rpx 5% auto;

}

.no {
  color: black;
  font-size: 28rpx;
  font-family: PingFangSC-regualr;
}